{
  "name": "react-slideshow-ui",
  "version": "0.3.7",
  "author": "Masashi Hirano (https://github.com/shisama)",
  "license": "MIT",
  "description": "React UI Component for slideshow like SlideShare or SpeakerDeck.",
  "main": "index.js",
  "homepage": "https://github.com/shisama/react-slideshow-ui",
  "bugs": {
    "url": "https://github.com/shisama/react-slideshow-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shisama/react-slideshow-ui.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "slideshow",
    "slide",
    "slides",
    "slideshare",
    "speakerdeck",
    "presentation",
    "keynote",
    "powerpoint"
  ],
  "scripts": {
    "build": "npm run clean && babel src --out-dir lib --ignore src/demo",
    "build:demo": "webpack",
    "build:dll": "NODE_ENV=production webpack --config webpack.dll.config.js",
    "build:all": "npm run lint && npm run typecheck && npm test && npm run build:dll && npm run build:demo && npm run clean && npm run build",
    "clean": "rimraf lib",
    "start": "webpack-dev-server --hot",
    "test": "nyc ava",
    "typecheck": "flow",
    "remove-types": "flow-remove-types --out-dir out/ src/ && eslint out --ext js,jsx --fix",
    "lint": "eslint src --ext js,jsx",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "prepublish": "npm run lint && npm run typecheck && npm test && npm build"
  },
  "dependencies": {
    "react": "^15.6.1",
    "toggle-fullscreen": "^0.3.1"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.1.0",
    "enzyme": "^2.8.2",
    "eslint": "^4.5.0",
    "eslint-closure": "^0.0.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.52.0",
    "flow-remove-types": "^1.2.1",
    "nyc": "^11.1.0",
    "power-assert": "^1.4.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.4.4",
    "prop-types": "^15.5.10",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-hot-loader": "1.3.1",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.4",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "Chrome": 57
              },
              "useBuiltIns": true
            }
          ],
          "react"
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-assign",
          "syntax-flow",
          "transform-flow-strip-types"
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "IE 11"
                ]
              },
              "useBuiltIns": true
            }
          ],
          "react"
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-assign",
          "syntax-flow",
          "transform-flow-strip-types"
        ]
      }
    }
  },
  "ava": {
    "files": "**/*.test.js",
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "react"
      ],
      "plugins": [
        "transform-class-properties",
        "syntax-flow",
        "transform-flow-strip-types"
      ]
    }
  },
  "pre-commit": [
    "build:all"
  ]
}
